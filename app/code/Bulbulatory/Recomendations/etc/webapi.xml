<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route method="GET" url="/B1/bulbulatory_recommendation/:id">
        <service class="Bulbulatory\Recomendations\Api\RecommendationRepositoryInterface" method="getById"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route method="GET" url="/B1/bulbulatory_recommendation">
        <service class="Bulbulatory\Recomendations\Api\RecommendationRepositoryInterface" method="getList"/>
        <resources>
            <resource ref="anonymouns"/>
        </resources>
    </route>
    <route method="POST" url="/B1/bulbulatory_recommendation">
        <service class="Bulbulatory\Recomendations\Api\RecommendationRepositoryInterface" method="save"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route method="PUT" url="/B1/bulbulatory_recommendation">
        <service class="Bulbulatory\Recomendations\Api\RecommendationRepositoryInterface" method="save"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route method="DELETE" url="/B1/bulbulatory_recommendation">
        <service class="Bulbulatory\Recomendations\Api\RecommendationRepositoryInterface" method="delete"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
</routes>